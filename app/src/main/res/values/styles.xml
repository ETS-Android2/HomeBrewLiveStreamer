<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVeryDark">@color/colorPrimaryVeryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:tabWidgetStyle">@android:style/Widget.DeviceDefault.Light.ActionBar.TabView</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerTheme</item>
        <!--<item name="android:alertDialogStyle">@style/SpinnerPopupTheme</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:logo">@drawable/streaminglogo32</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:contentInsetEnd">5dp</item>
        <item name="android:contentInsetStart">7dp</item>
        <item name="android:contentInsetLeft">7dp</item>
        <item name="android:titleMarginStart">15dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titleText" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="StatsUIText" parent="@style/AppTheme">
        <item name="android:textSize">11sp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal|bold|italic</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_weight">0.46</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="SettingsLabelText" parent="@style/AppTheme">
        <item name="android:height">15sp</item>
        <item name="android:width">180dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal|bold|italic</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="SettingsHeaderText" parent="@style/AppTheme">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal|bold|italic</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SpinnerTheme" parent="@style/AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:popupBackground">?colorPrimaryDark</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:foregroundTint">?colorAccent</item>
        <item name="android:foregroundTintMode">src_atop</item>
        <item name="android:popupTheme">@style/SpinnerPopupTheme</item>
    </style>

    <style name="SpinnerPopupTheme" parent="@style/AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="CheckboxTheme" parent="@style/AppTheme">
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlActivated">?colorAccent</item>
        <item name="buttonTint">?colorAccent</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
